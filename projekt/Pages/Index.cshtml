<form method="get" action="@Url.Action("wyszukajZawodnikow", "HomeController")">
    <label>Imię:</label>
    <input type="text" name="imie_zawodnika" />
    <label>Nazwisko:</label>
    <input type="text" name="nazwisko_zawodnika" />
    <button type="submit">Szukaj</button>
</form>



@{
    ViewData["Title"] = "Wyniki wyszukiwania";
}

<h1>Wyniki wyszukiwania:</h1>

@if (Model.Count() > 0)
{
    <table>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
        </tr>
        @foreach (var zawodnik in Model)
        {
            <tr>
                <td>@zawodnik.imie_zawodnika</td>
                <td>@zawodnik.nazwisko_zawodnika</td>
            </tr>
        }
    </table>
}
else
{
    <p>Nie znaleziono zawodnika o podanych imieniu i nazwisku.</p>
}


@* Tutaj definiujemy funkcje, ktora wyswietla wyniki wyszukiwania osoby
w bazie danych na podstawie jego imienia i nazwiska *@
@page
@using projekt.Models;


@model IEnumerable<projekt.Models.Zawodnik>

<h2>Wyniki wyszukiwania:</h2>

@if (Model.Count() == 0)
{
    <p>Nie znaleziono wyników</p>
}
else
{
    <table>
        <tr>
            <th>Imię</th>
            <th>Nazwisko</th>
            <th>Numer indeksu</th>
        </tr>
        @foreach (var zawodnik in Model)
        {
            <tr>
                <td>@zawodnik.imie_zawodnika</td>
                <td>@zawodnik.nazwisko_zawodnika</td>
                <td>@zawodnik.idzawodnicy</td>
            </tr>
        }
    </table>
}


